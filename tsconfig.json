{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "target": "es5",
        "module": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@fileforge/hexview": [ "projects/hexview" ]
        },
        "outDir": "dist/"
    },
    "include": [
        "src/"
    ]
}